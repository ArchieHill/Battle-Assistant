<ContentDialog
    x:Class="Battle_Assistant.Dialogs.AddOpponentDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Battle_Assistant.Dialogs"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    PrimaryButtonText="Add Opponent"
    CloseButtonText="Cancel"
    PrimaryButtonClick="AddOpponent_Click">

    <ContentDialog.TitleTemplate>
        <DataTemplate>
            <StackPanel Orientation="Horizontal">
                <Image Source="ms-appx:///Assets/SmallLogo.png" Width="40" Height="40" Margin="10,0"/>
                <TextBlock Text="Add Opponent"/>
            </StackPanel>
        </DataTemplate>
    </ContentDialog.TitleTemplate>

    <StackPanel>
        <TextBox Header="Opponents Name" PlaceholderText="Enter the name of the opponent"/>
        <TextBlock>The Shared Drive</TextBlock>
        <StackPanel Orientation="Horizontal">
            <TextBox PlaceholderText="Enter the file path of the shared drive" Text="{Binding Opponent.SharedDir.Path, Mode=TwoWay}"/>
            <Button Content="Select Folder" Click="SelectSharedDrive_Click"/>
        </StackPanel>
    </StackPanel>
</ContentDialog>
