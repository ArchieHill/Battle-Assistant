<ContentDialog
    x:Class="Battle_Assistant.Dialogs.AddOpponentDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Battle_Assistant.Dialogs"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="Add Opponent"
    PrimaryButtonText="Add Opponent"
    CloseButtonText="Cancel"
    PrimaryButtonClick="AddOpponent_Click"
    IsPrimaryButtonEnabled="False">

    <StackPanel>
        <TextBox Header="Opponents Name" 
                 PlaceholderText="Enter the name of the opponent" 
                 TextChanged="OpponentName_TextChanged" 
                 Text="{Binding Opponent.Name, Mode=TwoWay}"/>
        
        <TextBlock>The Shared Drive</TextBlock>
        <StackPanel Orientation="Horizontal">
            <TextBlock Text="{Binding Opponent.SharedDir.Path, Mode=OneWay}"/>
            <Button Content="Select Folder" Click="SelectSharedDrive_Click"/>
        </StackPanel>
    </StackPanel>
</ContentDialog>
