<Page
    x:Class="Battle_Assistant.Views.AboutPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Battle_Assistant.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <StackPanel Padding="24,12,24,0" Spacing="12">
        <TextBlock>Attributions</TextBlock>
        <RichTextBlock>
            <Paragraph>
                <Hyperlink NavigateUri="https://www.flaticon.com/free-icons/tank">Tank icon created by max.icons - Flaticon</Hyperlink>
            </Paragraph>
        </RichTextBlock>

        <TextBlock>
                    Version: 
                    <Run Text="{Binding Version}" FontWeight="Bold" />
        </TextBlock>
    </StackPanel>
</Page>
