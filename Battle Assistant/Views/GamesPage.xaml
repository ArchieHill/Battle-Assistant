<Page
    x:Class="Battle_Assistant.Views.GamesPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Battle_Assistant.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:models="using:Battle_Assistant.Models"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <StackPanel>
        <Button Content="Add Game" Click="AddGame_Click"/>

        <ItemsRepeater ItemsSource="{Binding Games, Mode=OneWay}">
            <ItemsRepeater.Layout>
                <StackLayout Orientation="Vertical" Spacing="10"/>
            </ItemsRepeater.Layout>

            <DataTemplate x:DataType="models:GameModel">
                <StackPanel BorderThickness="1" Background="DarkGreen" Margin="5" Padding="5,5,5,5">
                    <TextBlock Text="{Binding Name, Mode=OneWay}" FontSize="18"/>
                    <Image Source="{Binding GameIcon, Mode=OneWay}" Height="50" Width="50"/>
                    <TextBlock Text="{Binding GameDir, Mode=OneWay}"/>
                    <Button Content="Delete" Click="DeleteGame_Click" Tag="{Binding Index, Mode=OneWay}"/>
                </StackPanel>
            </DataTemplate>
        </ItemsRepeater>
    </StackPanel>s
</Page>
